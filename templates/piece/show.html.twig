{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block main %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ piece.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ piece.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ piece.type }}</td>
            </tr>
            <tr>
                <th>Acquired</th>
                <td>{{ piece.acquired ? piece.acquired|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Era</th>
                <td>{{ piece.era }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_piece_index') }}">back to list</a>

    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
